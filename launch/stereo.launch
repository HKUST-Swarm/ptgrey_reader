<launch>
    <!-- arg name="UP_ID" default="17591762" / -->
    <!-- arg name="DOWN_ID" default="17591763" / -->
     <node name="stereo" pkg="ptgrey_reader" type="multi_reader" output="screen">
        <param name="is_pub" type="bool" value="true"/>
        <param name="is_show" type="bool" value="false"/>
        <param name="is_print" type="bool" value="true"/>
        
        <rosparam subst_value="true">
            # common setting and default individual settings
            cam_cnt: 2
            frameRate:  20
            gain: 10.0
            is_auto_shutter: false
            is_sync: true
            shutter: 5.0
            brightness: 10.1
            exposure: 0.4


            # individual setting for camera 0
            camera0:
                serialNum: $(env UP_ID)
                topic:     right/image_raw
                topic_roi: right/image
                is_roi:    true
                size_x:    1280
                size_y:    1024
                center_x:  640
                center_y:  512
                cropper_x: 1280
                cropper_y: 1024
                down_sample_scale: 0.5
            camera1:
                serialNum: $(env DOWN_ID)
                topic:     left/image_raw
                topic_roi: left/image
                is_roi:    true
                size_x:    1280
                size_y:    1024
                center_x:  640
                center_y:  512
                cropper_x: 1280
                cropper_y: 1024
                down_sample_scale: 0.5

        </rosparam>
    </node>
</launch>
